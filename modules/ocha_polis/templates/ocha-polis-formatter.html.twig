{#
/**
 * @file
 * Default theme implementation for a OCHA polis wrapper formatter.
 *
 * Available variables:
 * - attributes: Iframe attributes.
 *
 * @ingroup themeable
 */
#}

{{ attach_library('ocha_polis/polis-responsive-iframe') }}
<div class="ocha-polis">
  <iframe
    {{ attributes }}
    sandbox="allow-scripts allow-same-origin allow-popups allow-popups-to-escape-sandbox"
    width="{{ width }}"
    height="{{ height }}"
    referrerpolicy="no-referrer"
    frameborder="0"
    target="_blank">
  </iframe>
</div>
